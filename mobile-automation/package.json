{
  "name": "mobile-automation",
  "version": "1.0.0",
  "description": "Automação de testes mobile com WebdriverIO e Appium",
  "main": "wdio.conf.js",
  "type": "module",
  "scripts": {
    "test:android": "wdio run wdio.conf.js --capability android",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open"
  },
  "dependencies": {
    "appium": "^2.19.0"
  },
  "devDependencies": {
    "@wdio/appium-service": "^8.37.0",
    "@wdio/cli": "^8.37.0",
    "@wdio/local-runner": "^8.37.0",
    "@wdio/mocha-framework": "^8.37.0",
    "@wdio/spec-reporter": "^8.37.0",
    "@wdio/allure-reporter": "^8.37.0",
    "chai": "^4.5.0",
    "mocha": "^10.4.0"
  }
}
