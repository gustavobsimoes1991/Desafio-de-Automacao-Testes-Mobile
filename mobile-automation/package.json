{
  "name": "mobile-automation",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:android": "wdio run wdio.conf.js --spec test/specs --capability android",
    "test:ios": "wdio run wdio.conf.js --spec test/specs --capability ios",
    "test:local": "wdio run wdio.conf.js",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "clean:allure": "rm -rf allure-report allure-results || true"
  },
  "dependencies": {
    "@wdio/cli": "^8.20.0",
    "@wdio/local-runner": "^8.20.0",
    "@wdio/mocha-framework": "^8.20.0",
    "@wdio/spec-reporter": "^8.20.0",
    "@wdio/allure-reporter": "^8.20.0",
    "chai": "^4.3.7",
    "appium": "^2.0.0",
    "webdriverio": "^8.20.0"
  },
  "devDependencies": {
    "allure-commandline": "^2.17.3"
  }
}
